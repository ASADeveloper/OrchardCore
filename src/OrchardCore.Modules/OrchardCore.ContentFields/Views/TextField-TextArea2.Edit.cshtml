@model OrchardCore.ContentFields.ViewModels.EditTextFieldViewModel
@using OrchardCore.ContentManagement.Metadata.Models
@using OrchardCore.ContentFields.Settings;

@{
    var settings = Model.PartFieldDefinition.Settings.ToObject<TextFieldSettings>();
    var editorSettings = Model.PartFieldDefinition.GetSettings<TextFieldTextArea2EditorSettingsViewModel>();
}

<fieldset class="form-group">
    <label asp-for="Text">@Model.PartFieldDefinition.DisplayName()</label>
    <textarea asp-for="Text" class="form-control content-preview-text" style="color:@editorSettings.TextFieldTextArea2EditorSettings.Color"></textarea>
    <span class="hint">@settings.Hint</span>
</fieldset>
